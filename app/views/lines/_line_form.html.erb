<%= form_for lyric_line, remote: true do |f| %>
<%= f.text_field :text, placeholder: 'enter new lyric' %>
<%= f.hidden_field :order_number, value: lyric_line.order_number  %>
<%= f.hidden_field :lyric_id, value: lyric_line.lyric_id  %>
<% if @first %>
	<%= hidden_field_tag :first, @first %>
<% end %>
	<%= f.submit %>

<% end %>

