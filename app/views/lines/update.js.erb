//replace text 

var order_number = '<%= @lyric_line.order_number.to_i %>'
var line_link = "<%= escape_javascript(render partial: 'lines/line_link', locals: { line: @lyric_line }) %>"

$('#line-' + order_number).html(line_link);
$('#next-' + order_number).attr("href", "<%= next_line_path( @lyric_line ) %>");
$('#previous-' + order_number).attr("href", "<%= previous_line_path( @lyric_line ) %>");
$('#form-hidden-' + order_number).attr("value", "<%= @lyric_line.id %>" )


$('#like').css({
	visibility: 'hidden'
});

$('#new-version').css({
	visibility: 'visible'
});

<% if @first %>

var first = '<%= @first.to_i %>'

$('#form-' + first + " .second").attr('value', order_number);

console.log('edit data for first = ' + first)

<% end %>

